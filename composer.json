{
    "name": "sitis/feature-test-module",
    "description": "Functional testing of API",
    "type": "yii2-extension",
    "minimum-stability": "dev",
    "keywords": [
        "luya",
        "yii2",
        "feature-test-module-extention"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "sitis",
            "email": "dev@sitisit.ru"
        }
    ],
    "require-dev": {
        "yiisoft/yii2": "2.0.47",
        "yiisoft/yii2-httpclient": "^2.0",
        "sitis/shop": "dev-master",
        "sitis/luya-module-admin": "*",
        "sitis/luya-module-cms": "*",
        "php-http/guzzle6-adapter": "^2.0@dev",
        "http-interop/http-factory-guzzle": "dev-master"
    },
    "require": {
        "php": ">=8.1",
        "codeception/codeception": "4.*",
        "codeception/module-phpbrowser": "*",
        "codeception/module-asserts": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.sitis.dev"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "git@github.com:chemezov/luya-headless-cms-api.git"
        }
    ],
    "scripts": {
        "post-install-cmd": ["php ./vendor/bin/codecept bootstrap"],
        "post-update-cmd": ["php ./vendor/bin/codecept bootstrap"],
        "post-package-install": [
            "cp -r .\\vendor\\sitis\\feature-test-module\\tests\\ .",
            "cp .\\vendor\\sitis\\feature-test-module\\codeception.yml .",
            "mkdir ./tests",
            "mkdir ./tests/acceptance",
            "mkdir ./tests/functional",
            "mkdir ./tests/unit"
        ],
        "post-package-update": ["mv tests ./"]
    },
    "autoload": {
        "psr-4": {
            "sitis\\tests\\": ""
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "luyadev/luya-composer": true,
            "php-http/discovery": true
        }
    }
}